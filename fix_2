    <!-- JavaScript for revealing tables on button click -->
    <script>
        $(document).ready(function () {
            $('.custom-btn').on('click', function (e) {
                e.preventDefault(); 
                
                const category = $(this).closest('.category-section').find('.category-title').text().trim();
                const buttonName = $(this).text().trim().replace(/ /g, '-');
                const combinedID = category + '-' + buttonName;
                
                $('.option-details').hide(); 
                $('#' + combinedID).show();
            });        
        });
    </script>

